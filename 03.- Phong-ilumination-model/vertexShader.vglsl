#version 120

varying vec3 normal_vector; 
varying vec3 camera_vertex; 
varying vec4 ambient_color; 
 
void main(void) 
{ 
    ambient_color = gl_FrontLightModelProduct.sceneColor * gl_FrontMaterial.ambient + gl_LightSource[0].ambient * gl_FrontMaterial.ambient; 
    camera_vertex = vec3   (gl_ModelViewMatrix * gl_Vertex); 
    normal_vector = normalize (gl_NormalMatrix * gl_Normal); 
    gl_TexCoord[0] = gl_MultiTexCoord0;

    gl_Position   = ftransform (); 
} ;